<nav style="background: #333; color: white; padding: 10px 20px;">
{% for link in nav_links %}
    {% if link.is_visible %}
        <a href="{{ url_for(link.endpoint) }}" style="color: white; margin-right: 20px;">
            {{ link.icon }} {{ _(link.label) }}
        </a>
    {% endif %}
{% endfor %}

<span style="float: right;">
    {% for lang in langs if lang.is_visible %}
        <a href="{{ url_for('main.set_language', lang=lang.code) }}" style="color: white; margin-left: 10px;">
            {{ lang.code.upper() }}
        </a>
    {% endfor %}
</span>

</nav>
